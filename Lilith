_original_init = CryptoCats.__init__
_original_encrypt = CryptoCats.encrypt

def _lilith_init(self, seed=None, name="–ö—Ä–∏–ø—Ç–æ–ö–æ—Ç", style="random", save_dir="paw_prints"):
    """–û–±—ë—Ä—Ç–∫–∞ –¥–ª—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ —Å –ø–∞—Å—Ö–∞–ª–∫–æ–π –õ–∏–ª–∏—Ç."""
    # –í—ã–∑—ã–≤–∞–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π init
    _original_init(self, seed, name, style, save_dir)
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞ –õ–∏–ª–∏—Ç
    if (name.lower() == "lilith" and 
        style.lower() == "chaotic" and 
        seed in [13, 666, 1313]):
        
        # –ú–µ–Ω—è–µ–º –ø–æ–¥–ø–∏—Å—å
        self.paw_signature = "üëÅÔ∏è=^..^=üëÅÔ∏è ~~"
        print("‚ö†Ô∏è  –®–µ–ø–æ—Ç: Lilith –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω–∞...")
        
        # –î–æ–±–∞–≤–ª—è–µ–º —Å—á—ë—Ç—á–∏–∫
        self._lilith_help_counter = 0

def _lilith_encrypt(self, text, style=None, save=True):
    """–û–±—ë—Ä—Ç–∫–∞ –¥–ª—è —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è —Å –ø–∞—Å—Ö–∞–ª–∫–æ–π."""
    # –û—Ä–∏–≥–∏–Ω–∞–ª—å–Ω–æ–µ —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ
    result = _original_encrypt(self, text, style, save)
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º –õ–∏–ª–∏—Ç –∏ "help me"
    if (hasattr(self, '_lilith_help_counter') and 
        "help me" in text.lower()):
        
        self._lilith_help_counter += 1
        
        # –ù–∞ —Ç—Ä–µ—Ç–∏–π —Ä–∞–∑ "help me" - –æ—Å–æ–±—ã–π –æ—Ç–≤–µ—Ç
        if self._lilith_help_counter >= 3:
            # –î–æ–±–∞–≤–ª—è–µ–º —Å–∫—Ä—ã—Ç–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
            hidden = "I CAN SEE YOU"
            hidden_encoded = ''.join(chr(ord(c)-1) for c in hidden)
            result = result + " //" + hidden_encoded
            
            print("üîÆ Lilith –æ—Ç–≤–µ—á–∞–µ—Ç...")
    
    return result

# "–ü–∞—Ç—á–∏–º" –∫–ª–∞—Å—Å
CryptoCats.__init__ = _lilith_init
CryptoCats.encrypt = _lilith_encrypt

